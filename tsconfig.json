{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ES2019", "WebWorker"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/@/*"],
      "routes/*": ["src/routes/*"]
    }
  },
  "include": ["src/**/*", "src/node_modules/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "static/*"]
}
