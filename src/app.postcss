@tailwind base;
@tailwind components;
@tailwind utilities;

@layer components {
  .card {
    @apply shadow-md rounded-xl;
    &[tabindex='0'] {
      @apply cursor-pointer transition-shadow focusable;
      @apply hover:shadow-lg focus:shadow-lg active:shadow;
    }
  }

  .button {
    @apply transition focusable font-bold;
    @apply disabled:text-gray-400;
    &:not(:disabled) {
      @apply hover:bg-primary-lighter hover:shadow-md-primary;
      @apply focus:bg-primary-lighter focus:shadow-md-primary;
      @apply active:bg-primary-darker active:shadow-primary;
    }
    &.primary {
      @apply bg-primary text-white;
      @apply disabled:bg-primary-thirty;
    }
    &.gradient {
      @apply text-white;
      @apply disabled:bg-primary-thirty;
      &:not(:disabled) {
        @apply bg-gradient-primary;
        @apply hover:shadow-lg-primary;
        @apply focus:shadow-lg-primary;
        @apply active:shadow-primary;
      }
    }
  }
}

@layer utilities {
  .bg-clip-text {
    -webkit-background-clip: text;
    background-clip: text;
  }

  .bg-gradient-primary {
    @apply bg-gradient-to-r from-primary-cooler via-primary to-primary-warmer;
  }

  .focusable {
    @apply ring-primary-lighter focus:ring focus:outline-none;
  }

  .select-none-all {
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }
}
